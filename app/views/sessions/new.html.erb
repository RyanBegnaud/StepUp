<h1> Sign in </h1>
<% if flash[:notice] %>
  <p><%= flash[:notice] %>!</p>
<% end %>

<%= form_tag( method: :post) do %>


    <div class="form-group">
  
      <%= label_tag(:username, "Username:") %>
      <%= text_field_tag :username %>

    </div>
  
    <div class="form-group">

      <%= label_tag(:password, "Password:") %>
      <%= password_field_tag :password %>

    </div>
  
    <div class="actions">
      <%= submit_tag("Log In") %>
    </div>
  
  <% end %>
